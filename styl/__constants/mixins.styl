/************************* FIXS ****************************************************/
clearfix() 
	&:before,
	&:after 
		content: " "
		display: table 
	&:after
		clear: both
/************************** BLOCKS *******************************************/
block-center()
	display block
	margin-left auto
	margin-right auto

square(X)
	width X
	height X
/************************************** DECORATORS *************************************/
radius(radius)
	border-radius radius